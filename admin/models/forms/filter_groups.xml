<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			label="COM_JEM_GLOBAL_FIELD_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>
	</fields>
	<fields name="list">
	<field
			name="fullordering"
			type="list"
			label="COM_JEM_GLOBAL_FIELD_LIST_FULL_ORDERING"
			description="COM_JEM_GLOBAL_FIELD_LIST_FULL_ORDERING_DESC"
			onchange="this.form.submit();"
			default="a.name ASC"
			>
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.name ASC">NAME_ASC</option>
			<option value="a.name DESC">NAME_DESC</option>
		</field>
		<field
			name="limit"
			type="limitbox"
			class="inputbox input-mini"
			default="25"
			label="COM_JEM_GLOBAL_FIELD_LIST_LIMIT"
			description="COM_GLOBAL_FIELD_LIST_LIMIT_DESC"
			onchange="this.form.submit();"
		/>
	</fields>
</form>